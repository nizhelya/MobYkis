<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/appartmentFragment">
    <fragment
        android:id="@+id/appartmentFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.list.AppartmentListFragment"
        android:label="@string/list_appartment"
        tools:layout="@layout/fragment_list_appartment" >
        <action
            android:id="@+id/action_appartmentFragment_to_addAppartmentFragment"
            app:destination="@id/addAppartmentFragment" />
        <action
            android:id="@+id/action_appartmentFragment_to_bottomNavigationFragment"
            app:destination="@id/bottomNavigationFragment" />
    </fragment>
    <fragment
        android:id="@+id/addAppartmentFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.add.AddAppartmentFragment"
        android:label="@string/add_appartment"
        tools:layout="@layout/fragment_add_appartment" >
        <action
            android:id="@+id/action_addAppartmentFragment_to_appartmentFragment"
            app:destination="@id/appartmentFragment" />
    </fragment>
    <fragment
        android:id="@+id/bottomNavigationFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.BottomNavigationFragment"
        android:label="BottomNavigationFragment" >
        <argument
            android:name="address_id"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="house_id"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_waterMeterDetailFragment"
            app:destination="@id/waterMeterDetailFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_serviceDetailFragment"
            app:destination="@id/serviceDetailFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_heatMeterDetailFragment"
            app:destination="@id/heatMeterDetailFragment" />
        <action
            android:id="@+id/action_bottomNavigationFragment_to_paymentFragment"
            app:destination="@id/paymentFragment" />
    </fragment>
    <fragment
        android:id="@+id/waterMeterDetailFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.water.WaterMeterDetailFragment"
        android:label="WaterMeterDetailFragment" />
    <fragment
        android:id="@+id/serviceDetailFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.service.ServiceDetailFragment"
        android:label="ServiceDetailFragment" />
    <fragment
        android:id="@+id/heatMeterDetailFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.heat.HeatMeterDetailFragment"
        android:label="HeatMeterDetailFragment" />
    <fragment
        android:id="@+id/paymentFragment"
        android:name="com.yuzhny.mykis.presentation.appartment.payment.PaymentFragment"
        android:label="fragment_payment"
        tools:layout="@layout/fragment_payment" />
</navigation>
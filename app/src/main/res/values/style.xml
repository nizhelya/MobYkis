<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="defaultViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="spinnerStyle" parent="defaultViewStyle">
        <item name="smsp_errorTextColor">@color/error_color</item>
        <item name="smsp_floatingLabelColor">@color/floating_color</item>
        <item name="smsp_underlineColor">@color/underline_color</item>
        <item name="smsp_errorTextSize">13sp</item>
        <item name="smsp_itemSize">14sp</item>
        <item name="smsp_hintSize">14sp</item>
    </style>
    <style name="FirstText">
        <item name="android:fontFamily">@font/signika_negative_light</item>
        <item name="android:padding">8dp</item>

    </style>
    <style name="SecondText">
        <item name="android:fontFamily">@font/nunito_bold</item>
    </style>
    <style name="SecondLargeText">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="ExtraText">
        <item name="android:fontFamily">@font/exo_italic</item>
    </style>
    <style name="CardStyleFirst" parent="Theme.Material3.Dark">
        <item name="android:layout_margin">16dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="strokeColor">@color/cardview_light_background</item>
        <item name="strokeWidth">1dp</item>
    </style>
    <style name="CardStyleSecond" parent="Theme.Material3.Dark">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="strokeColor">@color/cardview_light_background</item>
        <item name="strokeWidth">1dp</item>
    </style>


</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        style="@style/ChildText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2023-01-05"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/date_text"
        app:layout_constraintBottom_toBottomOf="@id/date_text"
        app:layout_constraintStart_toEndOf="@id/date_text"/>
        <TextView
        android:id="@+id/prixod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="ПриватБанк"
        app:layout_constraintStart_toEndOf="@id/date"/>
    <TextView
        android:id="@+id/kv_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/kvartplata_text"
        style="@style/ChildText"

        app:layout_constraintTop_toBottomOf="@id/date_text"
        app:layout_constraintStart_toStartOf="@id/date_text"
    />
    <TextView
        android:id="@+id/kv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="500.00"
        android:layout_marginStart="8dp"
        style="@style/SecondText"
        app:layout_constraintTop_toTopOf="@id/kv_text"
        app:layout_constraintBottom_toBottomOf="@id/kv_text"
        app:layout_constraintStart_toEndOf="@id/kv_text"/>

    <TextView
        android:id="@+id/otoplenie_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ytke_colon"
        style="@style/ChildText"

        app:layout_constraintTop_toBottomOf="@id/kv_text"
        app:layout_constraintStart_toStartOf="@id/date_text"
        />
    <TextView
        android:id="@+id/otoplenie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.00"
        android:layout_marginStart="8dp"
        style="@style/SecondText"
        app:layout_constraintTop_toTopOf="@id/otoplenie_text"
        app:layout_constraintBottom_toBottomOf="@id/otoplenie_text"
        app:layout_constraintStart_toEndOf="@id/otoplenie_text"/>
    <TextView
        android:id="@+id/vodokanal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vodokanal_colon"
        style="@style/ChildText"
        app:layout_constraintTop_toBottomOf="@id/otoplenie_text"
        app:layout_constraintStart_toStartOf="@id/date_text"

        />
    <TextView
        android:id="@+id/vodokanal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.00"
        android:layout_marginStart="8dp"
        style="@style/SecondText"
        app:layout_constraintTop_toTopOf="@id/vodokanal_text"
        app:layout_constraintBottom_toBottomOf="@id/vodokanal_text"
        app:layout_constraintStart_toEndOf="@id/vodokanal_text"/>
    <TextView
    android:id="@+id/tbo_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/tbo"
    style="@style/ChildText"
    app:layout_constraintStart_toStartOf="@id/date_text"
    app:layout_constraintTop_toBottomOf="@id/vodokanal_text"
    />
    <TextView
        android:id="@+id/tbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.00"
        android:layout_marginStart="8dp"
        style="@style/SecondText"
        app:layout_constraintTop_toTopOf="@id/tbo_text"
        app:layout_constraintBottom_toBottomOf="@id/tbo_text"
        app:layout_constraintStart_toEndOf="@id/tbo_text"/>
    <TextView
        android:id="@+id/summary_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/summary"
        style="@style/ChildText"
        app:layout_constraintStart_toStartOf="@id/date_text"
        app:layout_constraintTop_toBottomOf="@id/tbo_text"
        />
    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="500.00"
        android:layout_marginStart="8dp"
        style="@style/SecondText"
        app:layout_constraintTop_toTopOf="@id/summary_text"
        app:layout_constraintBottom_toBottomOf="@id/summary_text"
        app:layout_constraintStart_toEndOf="@id/summary_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/first_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
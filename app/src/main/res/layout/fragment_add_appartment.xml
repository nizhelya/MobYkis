<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.appartment.add.AddAppartmentFragment"
    android:orientation="vertical">

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/block_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        app:smsp_hint="@string/block"
        style="@style/spinnerStyle"  />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/street_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:smsp_hint="@string/street"
        style="@style/spinnerStyle"
        />

    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/house_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:smsp_hint="@string/house"
        style="@style/spinnerStyle"
        />
    <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
        android:id="@+id/flat_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:smsp_hint="@string/flat"
        style="@style/spinnerStyle"
        />



    <ImageView
        android:id="@+id/tip_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_info"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="8dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_label"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/code_hint"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        >

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/code_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:singleLine="true"
        android:inputType="number"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/check_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility ="gone"
        android:text="Street" />
</LinearLayout>
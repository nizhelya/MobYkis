<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardStyleFirst"
    >


    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:animateLayoutChanges="true"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/view_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@drawable/ic_expand_less"  />
            <TextView
                android:id="@+id/fullfio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_open"
                tools:text="Шулік Родіон Віталійович" />


        </androidx.constraintlayout.widget.ConstraintLayout>




    <LinearLayout
        android:id="@+id/linear_born"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/born_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FirstText"
            android:text="@string/born_text"
            />
        <TextView
            android:id="@+id/born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondText"
            tools:text="25/05/2006"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FirstText"
            android:text="@string/sex_text"
            />
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondText"
            tools:text="М"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_relationship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/relationship_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FirstText"
            android:text="@string/relationship_text"
            />
        <TextView
            android:id="@+id/relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondText"
            tools:text="Cин"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/FirstText"
            android:text="@string/phone_text"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondText"
            tools:text="+380634742842"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_subsidia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/subsidia_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstText"
                android:text="@string/subsidia_text"
                />
            <CheckBox
                android:id="@+id/subsidia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_vkl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/vkl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstText"
                android:text="@string/vkl_text"
                />
            <CheckBox
                android:id="@+id/vkl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:clickable="false"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            style="@style/ExtraText"
            android:text="@string/card_text"
            />

      <com.google.android.material.card.MaterialCardView
          android:id="@+id/card_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            android:layout_margin="2dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            app:strokeWidth="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/linear_inn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/inn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/FirstText"
                android:text="@string/inn_text"
                />
                <TextView
                    android:id="@+id/inn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondText"
                    tools:text="45883564"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_doc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/doc_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:fontFamily="@font/signika_negative_light"
                    android:text="@string/doc_text"
                    />
                <TextView
                    android:id="@+id/doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/SecondText"
                    tools:text="Паспорт"
                    />

            </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_seria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seria_text"
                        style="@style/FirstText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/seria_text" />
                    <TextView
                        android:id="@+id/seria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        style="@style/SecondText"
                        tools:text="A0000B0000"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FirstText"
                        android:text="@string/number_text"
                        />
                    <TextView
                        android:id="@+id/number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SecondText"
                        tools:text="04483556"
                        />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FirstText"
                        android:text="@string/date_issue_text"
                        />
                    <TextView
                        android:id="@+id/date_issued"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SecondText"
                        tools:text="01-05-2023"
                        />

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linear_issued"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/issued_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/FirstText"
                        android:text="@string/issued_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/issued"
                        app:layout_constraintBottom_toBottomOf="@id/issued"
                        />
                    <TextView
                        android:id="@+id/issued"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        style="@style/SecondText"
                        tools:text="0222"
                        app:layout_constraintStart_toEndOf="@id/issued_text"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
</com.google.android.material.card.MaterialCardView>
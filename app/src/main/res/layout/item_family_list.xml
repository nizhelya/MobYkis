<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeColor="@color/cardview_light_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp"
    android:layout_margin="16dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:strokeWidth="1dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        android:animateLayoutChanges="true"
        app:layout_constraintTop_toTopOf="parent" >
        <ImageView
            android:id="@+id/view_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_expand_less"
            app:layout_constraintTop_toTopOf="@id/lastname"
            app:layout_constraintBottom_toBottomOf="@id/lastname"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Шулік" />


        <TextView
            android:id="@+id/fistname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:padding="8dp"
            tools:text="Родіон"
            app:layout_constraintTop_toTopOf="@id/surname"
            app:layout_constraintBottom_toBottomOf="@id/surname"
            app:layout_constraintStart_toEndOf="@+id/surname"
            />
        <TextView
            android:id="@+id/lastname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:textSize="14sp"
            android:padding="8dp"
            tools:text="Віталійович"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/view_open"
            app:layout_constraintStart_toEndOf="@id/fistname"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Group
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="born,born_text,
            relationship_text,relationship,
            sex,sex_text"/>
        <TextView
            android:id="@+id/born_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_negative_light"
            android:text="@string/born_text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout"
            />
        <TextView
            android:id="@+id/born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/born_text"
            app:layout_constraintTop_toTopOf="@id/born_text"
            tools:text="25/05/2006"/>
        <TextView
            android:id="@+id/sex_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_negative_light"
            android:text="@string/sex_text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="@id/born_text"
            app:layout_constraintTop_toBottomOf="@id/born_text"
            />
        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/sex_text"
            app:layout_constraintTop_toTopOf="@id/sex_text"
            tools:text="М"/>
        <TextView
            android:id="@+id/relationship_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/signika_negative_light"
            android:text="@string/relationship_text"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="@id/sex_text"
            app:layout_constraintTop_toBottomOf="@id/sex_text"
            />
        <TextView
            android:id="@+id/relationship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/relationship_text"
            app:layout_constraintTop_toTopOf="@id/relationship_text"
            tools:text="Cин"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
            <variable
                name="data"
                type="com.yuzhny.mykis.domain.heat.meter.HeatMeterEntity" />
            <variable
                name="clickShortListener"
                type="com.yuzhny.mykis.presentation.appartment.heat.HeatMeterShortListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:onClick="@{() -> clickShortListener.onClick(data)}"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingTop="2dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/image_heat_meter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_heat_meter"
                android:padding="4dp"
                app:layout_constraintTop_toTopOf="@id/heat_meter_text"
                app:layout_constraintBottom_toBottomOf="@id/dop_text"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/heat_meter_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="24sp"
                android:layout_marginStart="8dp"
                tools:text="GSD 8 METERS"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_heat_meter" />

            <TextView
                android:id="@+id/dop_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/SecondText"
                tools:text="Cписан"
                app:layout_constraintStart_toStartOf="@id/heat_meter_text"
                app:layout_constraintTop_toBottomOf="@id/number_text" />

            <TextView
                android:id="@+id/number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo_italic"
                android:text="@string/number_colon"
                app:layout_constraintStart_toStartOf="@id/heat_meter_text"
                app:layout_constraintTop_toBottomOf="@id/heat_meter_text" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SecondText"
                tools:text="3324435435434"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/number_text"
                app:layout_constraintTop_toTopOf="@id/number_text"
                app:layout_constraintBottom_toBottomOf="@id/number_text" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/first_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

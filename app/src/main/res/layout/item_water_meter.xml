<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_constraint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="2dp"
        android:paddingBottom="12dp">
    <ImageView
        android:id="@+id/image_water_meter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_water_meter"
        app:layout_constraintTop_toTopOf="@id/water_meter_text"
        app:layout_constraintBottom_toBottomOf="@id/spisan_text"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/water_meter_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textSize="24sp"
        tools:text="GSD 8 METERS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_water_meter"/>
        <TextView
            android:id="@+id/spisan_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/SecondText"
            tools:text="зписан"
            app:layout_constraintStart_toStartOf="@id/water_meter_text"
            app:layout_constraintTop_toBottomOf="@id/water_meter_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/first_layout"/>
</androidx.constraintlayout.widget.ConstraintLayout>